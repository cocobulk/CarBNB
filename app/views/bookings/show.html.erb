<div class="container">
  <div class="row mb-4">
    <div class="col-12 text-start">
      <%= link_to 'Back to my bookings', bookings_path %>
    </div>
  </div>
  <div class="row justify-content-center">
    <h1 class="display-4 text-center mb-4">Booking : <%= @booking.id %></h1>
    <div class="col-md-6 mb-4">
      <div class="card">
        <img src="<%= asset_path('voiture.png') %>" alt="Car Photo" class="card-image">
        <div class="card-body">
          <h3 class="card-title fw-bold fs-5 text-start text-primary"><%= @booking.car.model %></h3>
          <div class="d-flex flex-column">
            <div class="card-price">Start Date: <strong><%= @booking.start_date %></strong></div>
            <div class="card-price">End Date: <strong><%= @booking.end_date %></strong></div>
            <div class="card-price">Reservation Price: <strong><%= @booking.car.price%></strong></div>
            <div class="card-price">Confirmation: <strong><%= @booking.confirmed %></strong></div>
            <div class="d-flex justify-content-between mt-2">
              <%= button_to 'Cancel', @booking, method: :delete, class: 'btn btn-delete' if policy(@booking).destroy? %>
              <%= link_to 'Edit', edit_booking_path(@booking), class: 'btn btn-flat' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
