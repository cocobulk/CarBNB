<div class="container">
  <div class="filter-bar">
    <form class="row justify-content-center align-items-center px-3">
      <div class="col-md-3">
        <label for="inputModel" class="form-label">Car Model</label>
        <input type="text" class="form-control" id="inputModel" placeholder="Enter car model">
      </div>
      <div class="col-md-3">
        <label for="inputSeats" class="form-label">Seats</label>
        <select class="form-select" id="inputSeats">
          <option value="">Any</option>
          <option value="2">2</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6+">6+</option>
        </select>
      </div>
      <div class="col-md-3">
        <label for="inputPrice" class="form-label">Maximum Price</label>
        <input type="number" class="form-control" id="inputPrice" placeholder="Enter maximum price">
      </div>
      <div class="col-md-3">
        <button type="submit" class="btn btn-flat col-12">Apply Filters</button>
      </div>
    </form>
  </div>
  <div class="row">
          <h1 class="text-center mb-4" style="font-family: 'Montserrat', sans-serif; font-weight: 800;">Cars available near you</h1>
    <div class="col-md-6">
      <div class="col-12">
      </div>
      <div class="row justify-content-between">
        <% @cars.each do |car| %>
          <div class="col-md-6 mb-4">
            <a href="<%= car_path(car) %>" class="card-link">
              <div class="card">
                <%# <img src="<%= asset_path('voiture.png')" alt="Car Photo" class="card-image"> %>
                <%= cl_image_tag(car.photos[0].key, class:"card-img-top rounded", height: 300, width: 400, crop: :fit) if car.photos.present?%>
                <div class="card-body">
                  <h3 class="card-title fw-bold fs-5 text-start text-primary"><%= car.model %></h3>
                  <div class="d-flex justify-content-between">
                    <p class="card-price"><%= car.seats_number %> Seats</p>
                    <p class="card-price">$<%= car.price %></p>
                  </div>
                </div>
              </div>
            </a>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="map-container border-rounded shadow-sm">
        <div class="p-3 rounded" style="width: 100%; height: 100%;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
  <div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    This footer is made with <i class="fas fa-heart"></i> at Le Wagon
  </div>
</div>
</div>
