<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-12 text-start">
      <%= link_to "Back to my cars", dashboard_path %>
    </div>
  </div>
  <div class="card-product">
    <% if @car.photos.present? %>
      <%= cl_image_tag(@car.photos[0].key, class: "card-product-image", height: 300, width: 400, crop: :fit) %>
    <% end %>
    <div class="card-product-infos row">
      <div class="col-8">
        <h2 class="card-product-title"><%= @car.model %></h2>
      </div>
      <div class="col-4 text-end">
        <%= link_to "Edit informations about my car", edit_car_path, class: "btn btn-flat" %>
      </div>
      <div class="col-2">
        <p><strong>Price per day :</strong> <%= @car.price %> $</p>
      </div>
      <div class="col-2">
        <p><strong>Number of seats : </strong> <%= @car.seats_number %></p>
      </div>
      <div class="col-2">
        <p><strong>Year : </strong><%= @car.year %></p>
      </div>
      <div class="col-2">
        <p><strong>Location : </strong><%= @car.address %></p>
      </div>
    </div>
  </div>

  <div class="row justify-content-center mt-5">
    <div class="col-8">
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
       <div class="carousel-inner">
          <div class="carousel-item active">
            <%# <img src="<%= asset_path('voiture.png')" class="d-block w-100" alt="car photo"> %>
            <% if @car.photos[0].present? %>
              <%= cl_image_tag(@car.photos[0].key, style: 'height:auto; width:100%;', crop: :fill)%>
            <% end %>
          </div>
          <% if @car.photos[1].present? %>
            <div class="carousel-item">
              <%# <img src="<%= asset_path('voiture2.jpeg')" class="d-block w-100 img-thumbnail" alt="car photo"> %>
                <%= cl_image_tag(@car.photos[1].key, style: 'height:auto; width:100%;', crop: :fill)%>
            </div>
          <% end %>
          <% if @car.photos[2].present? %>
            <div class="carousel-item">
              <%# <img src="<%= asset_path('voiture3.jpeg')" class="d-block w-100" alt="car photo"> %>
                <%= cl_image_tag(@car.photos[2].key, style: 'height:auto; width:100%;', crop: :fill)%>
            </div>
          <% end %>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
</div>
